
mod std::env

use std::(internal, iter)

pub proc args() {
    return 0..internal::env::arg_count()
        |> iter::map(|i| internal::env::get_arg(i))
}

pub proc get_var(name) {
    case !internal::env::has_var(name) -> return #none unit
    return #some internal::env::get_var(name)
}

pub proc set_var(value, name) {
    internal::env::set_var(value, name)
}

pub proc delete_var(name) {
    internal::env::delete_var(name)
}